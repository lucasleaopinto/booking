{{template "base" .}}

{{define "content"}}
<div class="container">

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1 class="mt-5">Search for Availability</h1>

                <form action="/search-availability" method="post" novalidate class="needs-validation">
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}" >
                    <div class="row">
                        <div class="row" id="reservations-dates">
                            <div class="col">
                                <input required type="text" class="form-control" name="start" placeholder="Arrival">

                            </div>
                            <div class="col">
                                <input required type="text" class="form-control" name="end" placeholder="Departure">

                            </div>

                        </div>
                    </div>
                    <hr>

                    <!-- <div class="row">

                        <button type="submit" class="btn btn-primary col-3 mx-auto">Search Availability</button>
                    </div> -->
                    <button type="submit" class="btn btn-primary col-3 mx-auto">Search Availability</button>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <button id="colorButton" class="btn btn-outline-secondary">click me</button>
            </div>
        </div>
    </div>
{{end}}

{{define "js"}}
    <script>
        
        const elem = document.getElementById('reservations-dates');
        const rangepicker = new DateRangePicker(elem, {
            format: "dd/mm/yyyy",
        });
    </script>
{{end}}
